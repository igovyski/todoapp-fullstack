<main>
    <section class="tasks">

        {{#each tasks}}
        <div class="task">
            <form action="">
                <div>
                    <input type="checkbox" name="" id="task-{{this.id}}">
                    <label for="task-{{this.id}}">{{this.description}}</label>
                </div>

                <button>
                    <img src="/images/x-icon.png" alt="">
                </button>
            </form>
        </div>
        {{/each}}

        <div class="info">
            <p>5 active tasks</p>

            <div class="buttons">
                <a href="" class="active">All</a>
                <a href="">Actives</a>
                <a href="">Completed</a>
            </div>

            <a href="">Clean tasks</a>
        </div>
    </section>

    <section class="buttons">
        <a href="" class="active">All</a>
        <a href="">Actives</a>
        <a href="">Completed</a>
    </section>
</main>